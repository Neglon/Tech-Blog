<h1>Your Dashboard</h1>
{{#if posts.length}}
    {{#each posts as |post|}}
        <div>
            <h2>{{post.title}}</h2>
            <a href="/dashboard/edit/{{post.id}}">Edit</a>
        </div>
    {{/each}}
{{else}}
    <p>You have not created any posts yet.</p>
{{/if}}
<a href="/dashboard/new">Create New Post</a>